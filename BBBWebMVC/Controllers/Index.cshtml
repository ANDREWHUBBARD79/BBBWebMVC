@page
@model BBBWebMVC.Controllers.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_ViewImports.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GadgetModel[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GadgetModel[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GadgetModel[0].AppearsIn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GadgetModel[0].WithThisActor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.GadgetModel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppearsIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WithThisActor)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
